// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/database.db"
}

model User {
  id       String    @id @default(uuid())
  email    String
  name     String
  photo    String
  password String
  Profile  Profile[]
}

model Profile {
  id    String @id @default(uuid())
  title String

  owner       User          @relation(fields: [userId], references: [id])
  userId      String
  CounterPart CounterPart[]
}

model CounterPart {
  id    String @id @default(uuid())
  title String

  profile   Profile @relation(fields: [profileId], references: [id])
  profileId String

  type String

  from Transaction[] @relation("from")
  to   Transaction[] @relation("to")
}

model Transaction {
  id          String @id @default(uuid())
  value       Float
  description String

  from   CounterPart @relation("from", references: [id], fields: [fromId])
  fromId String

  to   CounterPart @relation("to", references: [id], fields: [toId])
  toId String
}
