// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  email    String    @unique
  name     String
  password String
  photo    String
  Account  Account[]
}

model Account {
  id          String @id
  name        String
  description String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  FromTransaction Transaction[] @relation("from")
  ToTransaction   Transaction[] @relation("to")

  @@unique([name, userId])
}

model Transaction {
  id          String   @id
  amount      Float
  description String
  date        DateTime

  fromAccount   Account @relation("from", fields: [fromAccountId], references: [id])
  fromAccountId String

  toAccount   Account @relation("to", fields: [toAccountId], references: [id])
  toAccountId String
}
